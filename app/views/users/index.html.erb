<div style="background-color: #3399FF;">
<div class="ui very padded container">
<div style="background-color: #3399FF;">
<h1 style = "color:white">People to Follow</h1>
</div>
</div>
<div class="ui raised very padded text container segment">
<div class="ui middle aligned divided list">
<% @users.each do |user| %>
    <% next if user == @current_user %>
        <div class="item">
        <div> <%= link_to user.twitter_handle, user_path(user) %> </div>
         <%= user.name %>
        <% if @current_user.followees.include?(user) %>
        <div class="right floated content">
        <button class="mini ui button">
        <i class="user icon"></i>
        <%= link_to "Unfollow", unfollow_path(user), method: :delete %> <br>
        </button>
        </div>
        <% else %>
        <div class="right floated content">
        <button class="mini ui button">
        <i class="user icon"></i>
        <%= link_to "Follow", follow_path(user), method: :post %> <br>
        </button>
        </div>
        <% end %>
        </div>

<% end %>
</div>
</div>
<br><br><br><br><br>
</div>




  
    
      
    