<h1> Profile Page</h1>

<% if @my_followers.include?(@user.id) %>
<%= button_to "unfollow", unfollow_path(@user) %> <br>
<% else %>
<%= button_to "follow", follow_path(@user) %> <br>
<% end %>



<% if @username["id"] == @user.id %>
<%= link_to "settings", edit_user_path(@user) %><br>
<% end %>


<%= link_to "my feed", tweets_path %><br><br>

<div> <%= @user.name.titlecase %> </div>
<div> <%= @user.twitter_handle %> </div><br>
<div> bio: <%= @user.bio %> </div><br>
<div> birthday: <%= @user.birthday %> </div><br>



<h3> Tweets </h3>

    <h3> Number of Tweets: <%= @user.tweets.count %> </h3>

    <% @user.tweets.reverse.each do |tweet| %>
        <div> <%= link_to @user.twitter_handle, user_path(@user) %></div>
         <%= link_to tweet.text, tweet_path(tweet) %> <br>
         <%= link_to tweet.created_at, tweet_path(tweet) %> <br>
         Likes <%= tweet.likes.count %> </div> 
   <% if @username["id"] == @user.id %>
    <%= link_to "delete tweet", tweet_path(tweet), method: :delete %>
    <% end %>
<% end %>







